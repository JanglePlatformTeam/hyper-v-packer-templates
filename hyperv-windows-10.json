{
  "variables": {
    "vm_name": "windows-10",
    "cpu": "2",
    "ram_size": "2048",
    "disk_size": "200000",
    "iso_url": "https://software-download.microsoft.com/download/pr/17134.1.180410-1804.rs4_release_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "a4ea45ec1282e85fc84af49acf7a8d649c31ac5c",
    "hyperv_switchname": "{{env `hyperv_switchname`}}",
    "username" : "vagrant",
    "password" : "vagrant",
    "output_directory": "./output-windows-10/",
    "box_out_dir": "./dist/"
  },
  "builders": [
  {
    "vm_name":"{{user `vm_name`}}",
    "type": "hyperv-iso",
    "disk_size": "{{user `disk_size`}}",
    "guest_additions_mode":"disable",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "communicator":"winrm",
    "winrm_username": "{{user `username`}}",
    "winrm_password": "{{user `password`}}",
    "winrm_timeout" : "4h",
    "shutdown_command": "shutdown /s /f /t 0",
    "ram_size": "{{user `ram_size`}}",
    "cpu": "{{user `cpu`}}",
    "generation": 2,
    "boot_wait": "0s",
    "boot_command": [
      "<enter><wait><enter>"
    ],
    "switch_name":"{{user `hyperv_switchname`}}",
    "enable_secure_boot":true,
    "output_directory": "{{user `output_directory`}}",
    "secondary_iso_images": [
      "./windows/iso/floppy.iso"
    ]
  },
  {
    "vm_name":"{{user `vm_name`}}",
    "type": "virtualbox-iso",
    "disk_size": "{{user `disk_size`}}",
    "guest_additions_mode": "upload",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "communicator":"winrm",
    "winrm_username": "{{user `username`}}",
    "winrm_password": "{{user `password`}}",
    "winrm_timeout" : "4h",
    "shutdown_command": "shutdown /s /f /t 0",
    "boot_wait": "0s",
    "boot_command": [
      "<enter><wait><enter>"
    ],
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `ram_size`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpu`}}"]
    ],
    "guest_os_type": "Windows10_64",
    "output_directory": "{{user `output_directory`}}",
    "floppy_files": [
      "./windows/answer_files/virtualbox/autounattend.xml"
    ],
    "floppy_dirs": [
      "./windows/floppy"
    ]
  }],
  "provisioners": [{  
      "type": "powershell",
      "elevated_user": "{{user `username`}}",
      "elevated_password": "{{user `password`}}",
      "scripts": [
        "./windows/scripts/install-virtualbox-guest-additions.ps1"
      ],
      "only": ["virtualbox-iso"]
    },{
      "environment_vars": [
        "SSH_USERNAME={{user `username`}}"
      ],    
      "type": "powershell",
      "elevated_user": "{{user `username`}}",
      "elevated_password": "{{user `password`}}",
      "scripts": [
        "./windows/scripts/install-chocolatey.ps1",
        "./windows/scripts/compile-dotnet-assemblies.ps1",
        "./windows/scripts/defrag.ps1",
        "./windows/scripts/scrub.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "./{{user `box_out_dir`}}/{{.Provider}}-{{user `output_name`}}.box"
    }
  ]
}